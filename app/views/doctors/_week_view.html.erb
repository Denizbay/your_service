<div id="week_view">
  <p> <strong> Create a new booking: </strong> </p>

  <div class="form">
    <%= simple_form_for([@doctor, @booking]) do |f| %>

    <div id="week_grid">
      <div>Mon</div>
      <div>Tue</div>
      <div>Wed</div>
      <div>Thu</div>
      <div>Fri</div>
      <% @doctor.week_slots(@week_number).each_with_index do |s, idx| %>
      <%#= raise %>
      <div style="<%= "grid-column: #{s.weekday} / #{s.weekday}; grid-row: #{s.hour_position} / #{s.hour_position};" %>">
        <%= radio_button_tag "booking[slot_id]", s.id %>
        <%= label_tag "booking_slot_id_#{s.id}", s.pretty_time %>
      </div>
      <% end %>
    </div>

    <%#= f.submit "Submit a booking", class: "btn btn-primary" %>
    <%= submit_tag 'Book appointment', class: "btn btn-flat" %>

    <% end %>
  </div>
</div>


