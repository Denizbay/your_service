<div class="header-one"><h2>These are all your bookings:</h2></div>





<div class="col-xs-12 col-sm-12 col-md-12" style="text-align: center; justify-content: center;">
  <% current_user.bookings.each do |booking| %>
          <div class="right-card-content" style="
        background-color: #acdae6;
    padding: 5%;
    display: inline-block;
    width: 50%;
    /* margin-left: 10%; */
    /* padding-right: 10%; */
    margin-bottom: 12px;
    justify-content: center;
    border-radius: 10px;">
          <div style="
    text-align: left;">
              <%= booking.slot.doctor.name %>
          </div>
          <div style="
    text-align: left;">
          Scheduled for:  <%=  booking.date %> (<%= booking.time %>)
          </div>

            <% if booking.review %>
              <div style="
    text-align: left;">
                <%= render 'reviews/review', review: booking.review %>
              </div>
            <% else %>
            <div style="
    text-align: left;">
              <%= link_to "Review your booking", new_booking_review_path(booking)%></div>
            <% end %>
          </div>
          <% end %>
</div>





<%= link_to "Schedule another appointment", doctors_path %>





