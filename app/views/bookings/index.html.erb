<div class="booking-container">

  <h2>These are all your bookings:</h2>

  <% current_user.bookings.each do |booking| %>
    <div>
      Dr. <%= booking.slot.doctor.name %> |
      Scheduled for:  <%=  booking.date %> (<%= booking.time %>)


      <% if booking.review %>
        <div>
          <%= render 'reviews/review', review: booking.review %>
        </div>
      <% else %>
        <%= link_to "Review your booking", new_booking_review_path(booking)  %>
      <% end %>
    </div>
  <% end %>

  <%= link_to "Schedule another appointment", doctors_path %>

</div>



