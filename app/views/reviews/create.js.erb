function showReview(innerHTML) {
  const newReviewForm = document.getElementById('reviews');
  newReviewForm.innerHTML = innerHTML;
}

<% if @review.errors.any? %>
    showReview('<%= j render "reviews/show", doctor: @doctor, booking: @booking, review: @review %>');
<% else %>
    showReview('<%= j render "reviews/show", doctor: @doctor, booking: @booking, review: @review %>');
<% end %>

